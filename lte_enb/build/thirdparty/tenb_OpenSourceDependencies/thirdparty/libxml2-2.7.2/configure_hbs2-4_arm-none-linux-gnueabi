#!/bin/sh

#
# Build of libxml2 using uClinux-2008R1.5 toolchain. 
#
# Build this lib with:
#
#  make distclean
#  ./configure_hbs2-3-5_bfin-uclinux-2008
#  make
#  make install
#
# Then commit software/libs/bin/libxml2-2.7.2/hbs2-3-5/bfin-uclinux-2008
#

./configure --build=i686-pc-linux \
            --host=arm-none-linux-gnueabi \
            --with-endianness=little \
            --enable-shared=no \
            --prefix=`pwd`/../../libs/bin/libxml2-2.7.2/hbs2-4/arm-none-linux-gnueabi \
            CC=arm-none-linux-gnueabi-gcc \
            AR=arm-none-linux-gnueabi-ar \
            CPPFLAGS=-DNO_LARGEFILE_SOURCE \
            DEPDIR=./.deps/arm-none-linux-gnueabi \
            --without-zlib \
            --without-python

